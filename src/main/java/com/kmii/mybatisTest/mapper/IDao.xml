<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kmii.mybatisTest.dao.IDao">  <!-- 인터페이스와 xml이 짝꿍 관계가 되어야한다 여기선 IDao -->
	
	<select id="boardListDao" resultType="com.kmii.mybatisTest.dto.IDto">  <!--  list에 담겨있지만 list는 써주지 않고 dto만 -->
		SELECT * FROM boardtbl ORDER BY bnum DESC
	</select>
	
	<insert id="boardWriteDao">
	<!-- INSERT INTO boardtbl(btitle,bcontent,bname,bhit) VALUES(#{param1}, #{param2}, #{param3}, 0) 
	 여러개일땐 매개변수이름 그대로 적으면 안된다. -> param으로! -->
	 
	  INSERT INTO boardtbl(btitle,bcontent,bname,bhit) VALUES(#{btitle}, #{bcontent}, #{bname}, 0)
		<!--  dao에서 param이름 먼저 설정해주면 param말고 적어도된다 -->
		
	</insert>
	
	<delete id="boardDeleteDao">
		DELETE FROM boardtbl WHERE bnum = #{param1}
	</delete>
	
	<select id="boardCountDao" resultType="int">
		SELECT COUNT(*) FROM boardtbl
	</select>
	
	<select id="boardContentViewDao" resultType="com.kmii.mybatisTest.dto.IDto"> <!--  boardList 여러개나 한개나 dto에서 가져오면 된다 -->
		SELECT * FROM boardtbl WHERE bnum=#{praam1}
	</select>
	
	<update id="boardModifyDao">
		UPDATE boardtbl SET btitle=#{param2}, bcontent=#{param3}, bname=#{param4} WHERE bnum=#{param1}  <!--  IDao 에서 정한 순서에따라 param번호 넣어준다 -->
	</update>

</mapper>